{{- $cssOpts := (dict "targetPath" "styles/bundle.css" "enableSourceMap" true ) -}}
{{- $main := resources.Get "/css/main.css" -}}
{{- $style := slice $main | resources.Concat "bundle.css" | toCSS $cssOpts | resources.PostCSS | resources.Minify | resources.Fingerprint -}}
# preloading
/*
Link: <{{ $style.Permalink }}>; rel=preload; as=style
/post/*.*
Link: <{{ "js/webmention_io.js" | relURL }}>; rel=preload; as=script; nopush
Link: <{{ "js/webmentions.js" | relURL }}>; rel=preload; as=script; nopush
